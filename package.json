{
  "name": "ulp",
  "version": "0.0.0-development",
  "description": "Math.nextAfter, Math.nextDown, Math.nextUp, Math.ulp in javascript (from https://gist.github.com/Yaffle/4654250)",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint lib test",
    "lint:fix": "eslint --fix lib test",
    "flow": "flow",
    "flow:coverage": "for file in lib/**.js test/**.js; do echo $file; flow coverage $file; done",
    "test": "nyc --reporter=lcov --reporter=text mocha $npm_package_config_mocha",
    "commitmsg": "validate-commit-msg",
    "precommit": "npm run lint && flow",
    "prepush": "npm test",
    "prepublish": "npm run lint && flow && npm test && npm run build && npm run copy-flow-files",
    "open:coverage": "open coverage/lcov-report/index.html",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "mocha": "./test/**/*.js",
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "nyc": {
    "include": [
      "lib/**/*.js"
    ],
    "sourceMap": false,
    "instrument": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jcoreio/ulp.git"
  },
  "keywords": [
    "ulp",
    "floating-point"
  ],
  "author": "Andy Edwards",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jcoreio/ulp/issues"
  },
  "homepage": "https://github.com/jcoreio/ulp#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "copy": "^0.3.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.13.1",
    "flow-bin": "^0.38.0",
    "husky": "^0.12.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.2.0",
    "nyc": "^10.1.2",
    "semantic-release": "^6.3.2",
    "validate-commit-msg": "^2.8.2"
  },
  "dependencies": {}
}
